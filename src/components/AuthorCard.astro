---
import { humanize, plainify } from "@/lib/utils/textConverter";
import { Image } from "@astrojs/image/components";

const { data } = Astro.props;
const { title, image, tags } = data.data;
---

<div
  class="rounded bg-theme-light p-8 text-center dark:bg-darkmode-theme-light"
>
  {
    image && (
      <Image
        class="mx-auto mb-6 rounded"
        src={image}
        alt={title}
        width={120}
        height={120}
      />
    )
  }
  <h4 class="mb-3">
    <a href={`/creators/${data.slug}`}>{title}</a>
  </h4>
  <ul class="mb-4">
    {
      tags.map((tag: string) => (
        <li class="mr-4 inline-block">#{humanize(tag)}</li>
      ))
    }
  </ul>
  <p class="mb-4">
    {plainify(data.body?.slice(0, 100))}
  </p>
  <a class="btn btn-outline-primary btn-sm" href={`/creators/${data.slug}`}>
    read more
  </a>
</div>
